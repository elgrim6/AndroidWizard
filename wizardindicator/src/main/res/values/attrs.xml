<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="wizard">
        <attr name="circleRadius" format="float" />
        <attr name="optionsArray" format="reference" />
        <attr name="circleColor" format="color" />
        <attr name="activeCircleColor" format="color" />
        <attr name="lineColor" format="color" />
        <attr name="textColor" format="color" />
        <attr name="lineWidth" format="float" />
        <attr name="textSize" format="float" />
        <attr name="activePage" format="integer" />
        <attr name="numberOfPages" format="integer" />
    </declare-styleable>

    <declare-styleable name="chooser">
        <attr name="textPadding" format="integer" />
        <attr name="textBackgroundColor" format="integer" />
        <attr name="tColor" format="integer" />
        <attr name="drawableId" format="integer" />
        <attr name="choicesArrayId" format="integer" />
        <attr name="activeTextColor" format="color" />
        <attr name="inActiveTextColor" format="color" />
        <attr name="mode">
            <enum name="TAB" value="1" />
            <enum name="TAB_INVERSE" value="2" />
            <enum name="BUBBLE" value="3" />
        </attr>

    </declare-styleable>
</resources>